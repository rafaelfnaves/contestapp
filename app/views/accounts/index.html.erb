<p id="notice"><%= notice %></p>

<h1>Listing Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Shopify account url</th>
      <th>Shopify api key</th>
      <th>Shopify password</th>
      <th>Shopify shared secret</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.shopify_account_url %></td>
        <td><%= account.shopify_api_key %></td>
        <td><%= account.shopify_password %></td>
        <td><%= account.shopify_shared_secret %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

